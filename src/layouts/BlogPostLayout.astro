---
import "../styles/styles.scss";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
	<main>
		<h1>{frontmatter.title}</h1>

		<div class="content">
			<div class="post-image-container">
				<img
					class="post-img shadow-img"
					src={frontmatter.image.url}
					width="300"
					alt={frontmatter.image.alt}
				/>
			</div>
			<slot />
		</div>

		<p class="article-meta">
			Written by {frontmatter.author}<br />
			Last updated on {new Date(frontmatter.pubDate).toLocaleDateString()}
		</p>
	</main>
</Layout>

<style lang="scss">
		body {
		height: fit-content;
	}

	h1 {
		text-align: center;
		padding-top: 1rem;
		padding-bottom: 1rem;
		font-size: 2rem;
	}
	main {
		color: #444;
	}
	.post-image-container {
		display: flex;
		justify-content: center;
	}
	.post-img {
		margin-top: 2rem;
		margin-bottom: 1rem;
	}
	.article-meta {
		font-style: italic;
		line-height: 20px;
		font-weight: 500;
	}
</style>
