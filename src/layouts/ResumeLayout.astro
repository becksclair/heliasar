---
import "../styles/styles.scss";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
	<main>
		<div class="content">
			<div class="post-image-container">
				<img
					class="post-img shadow-img"
					loading="lazy"
					src={frontmatter.image.url}
					height="300"
					alt={frontmatter.image.alt}
				/>
			</div>
			<slot />
		</div>
	</main>
</Layout>

<style lang="scss">
	body {
		height: fit-content;
	}

	h1 {
		text-align: center;
		padding-top: 1rem;
		padding-bottom: 1rem;
		font-size: 2rem;
	}

	main {
		color: #444;

		& h2,
		& h3 {
			color: rgb(var(--accent));
		}

		&a {
			border-radius: 5px;
			padding: 0.5rem 1rem;
			color: rgb(var(--accent));
			background-color: #e1e1e9;
			text-decoration: none;
			transition: all 0.2s ease-in-out;
			font-weight: 500;

			&:hover {
				box-shadow:
					0 4px 6px -1px rgba(0, 0, 0, 0.1),
					0 2px 4px -2px rgba(0, 0, 0, 0.1);
			}
			&:active {
				transform: translateY(2px);
			}
		}
	}
	.post-image-container {
		// display: flex;
		// justify-content: center;
		float: left;
		margin-right: 2rem;
		margin-bottom: 1rem;
		margin-top: 1.5rem;
	}
	.post-img {
		height: 142px;
		width: auto;
		margin-bottom: 1rem;
		filter: sepia(0.3) saturate(0.7) contrast(1.2) brightness(0.9)
			hue-rotate(10deg) blur(0.4px) grayscale(0.1);

		@media (max-width: 700px) {
			height: 192px;
		}
	}
</style>
